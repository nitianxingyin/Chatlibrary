<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunsheng.chatlibrary"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />
    <!-- 访问Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--- 访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.yunsheng.chatlibrary.activity.EimApplication"
        android:icon="@drawable/im"
        android:label="@string/app_name">
        <uses-library android:name="android.test.runner" />
        <activity
            android:name="com.yunsheng.chatlibrary.activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 用户向导 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.GuideViewActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 主页面 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.MainActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 我的消息提醒 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.notice.MyNoticeActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 系统消息 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.notice.SystemNoticeDetailActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 用户信息 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.im.UserInfoActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 聊天 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.im.ChatActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 聊天记录 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.im.ChatHistoryActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 好友信息 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.im.FriendInfoActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>
        <!-- 联系人列表 -->
        <activity
            android:name="com.yunsheng.chatlibrary.activity.im.ContacterMainActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"></activity>


        <!-- 联系人服务 -->
        <service android:name="com.yunsheng.chatlibrary.service.IMContactService"></service>
        <!-- 聊天服务 -->
        <service android:name="com.yunsheng.chatlibrary.service.IMChatService"></service>
        <!-- 系统消息服务 -->
        <service android:name="com.yunsheng.chatlibrary.service.IMSystemMsgService"></service>
        <!-- 重连接服务 -->
        <service android:name="com.yunsheng.chatlibrary.service.ReConnectService"></service>
    </application>
</manifest>